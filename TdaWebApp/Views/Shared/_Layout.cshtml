
<!DOCTYPE html>
<html lang="en">
<head>
    @RenderSection("AdditionalStyles", required: false)
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Team-care Deprescribing Application </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TdaWebApp.styles.css" asp-append-version="true" />


    <style>
        /* Updated styles for the menu items */
        .navbar-nav .nav-item {
            background-color: #c3e6cb; /* Light green background color */
            border-radius: 5px; /* Rounded corners */
            margin: 5px; /* Add some margin for spacing */
        }

            .navbar-nav .nav-item .nav-link {
                color: #fff; /* Light font color */
                padding: 10px 15px; /* Add padding to the links */
                display: block;
                text-decoration: none;
            }

                .navbar-nav .nav-item .nav-link:hover {
                    background-color: #a3d1b8; /* Darker background on hover */
                }
    </style>


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        @* <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light-green border-bottom box-shadow mb-3"> *@
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Team-Care Deprescribing Application</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Beers" asp-action="Index">View Beers/Combi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Beers" asp-action="Create">Create New Combination</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Beers" asp-action="UploadJSON">Upload JSON</a>
                        </li>
                        @* @{
                            if (User?.Identity?.IsAuthenticated ?? false)
                            {
                                <li class="nav-item">
                                    <u>Welcome: @User.Identity.Name</u>
                                    <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">Logout</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="ChangePassword">Change Password</a>
                                </li>

                                @if (User.IsInRole("SuperAdmin"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="User" asp-action="ManageUsers">Manage User</a>
                                    </li>
                                }

                            }
                        } *@

                        @{
                            if (User?.Identity?.IsAuthenticated ?? false)
                            {
                                <li class="nav-item">
                                    <u style="color: black;">Welcome: @User.Identity.Name</u>
                                    <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">Logout</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="ChangePassword" style="color: black;">Change Password</a>
                                </li>

                                @if (User.IsInRole("SuperAdmin"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="User" asp-action="ManageUsers" style="color: black;">Manage User</a>
                                    </li>
                                }
                            }
                        }
   
       
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Team-Care Deprescribing Application - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>