@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    .form-group label {
        font-size: 1rem;
        margin-bottom: 5px;
    }

    input.form-control {
        border-radius: 8px;
        font-size: 1rem;
        padding: 10px;
        width: 50%; /* Set to 50% for half the length */
    }

    button.btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-size: 1rem;
        padding: 10px 20px;
        border-radius: 8px;
    }

        button.btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .alert {
        font-size: 1rem;
    }
</style>

<h1>Change Password</h1>

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="alert alert-success">
        @ViewBag.SuccessMessage
    </div>
}

<div class="text-danger" asp-validation-summary="All"></div>

<form method="post">
    <div class="form-group">
        <label for="CurrentPassword">Current Password</label>
        <input name="CurrentPassword" type="password" class="form-control" required />
    </div>
    <br>
    <div class="form-group">
        <label for="NewPassword">New Password</label>
        <input name="NewPassword" type="password" class="form-control" required />
    </div>
    <br>
    <div class="form-group">
        <label for="ConfirmNewPassword">Confirm New Password</label>
        <input name="ConfirmNewPassword" type="password" class="form-control" required />
    </div>
    <br>
    <button class="btn btn-primary" type="submit">Change Password</button>
</form>
