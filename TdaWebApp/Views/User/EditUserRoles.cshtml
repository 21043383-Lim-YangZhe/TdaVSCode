@model EditUserRolesViewModel
@{
    ViewData["Title"] = "EditUserRoles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit User Roles - @Model.UserName</h1>

<form asp-action="EditUserRoles" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label asp-for="SelectedRoles">Roles</label>
        <select asp-for="SelectedRoles" asp-items="new SelectList(Model.AllRoles)" multiple class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>