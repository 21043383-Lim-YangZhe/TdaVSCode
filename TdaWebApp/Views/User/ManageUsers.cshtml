@using Microsoft.AspNetCore.Identity
@model List<dynamic>

@{
    ViewData["Title"] = "ManageUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Manage Users</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var user = item.User;
            var roles = item.Roles;

            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    @foreach (var role in roles)
                    {
                        <span class="badge badge-info" style="background-color: #5bc0de; color: #fff; margin-right: 5px;">@role</span>
                    }
                </td>
                <td>
                    <a asp-action="EditUserRoles" asp-route-userId="@user.Id">Edit Roles</a> |

                    <!-- Add confirmation prompt for Delete action -->
                    <button type="button" class="btn btn-link" onclick="confirmDelete('@user.Id')">Delete User</button>

                    <form id="deleteForm-@user.Id" asp-action="DeleteUser" method="post" style="display:none;">
                        <input type="hidden" name="userId" value="@user.Id" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function confirmDelete(userId) {
        var confirmation = confirm("Are you sure you want to delete this user?");
        if (confirmation) {
            document.getElementById('deleteForm-' + userId).submit();
        }
    }
</script>