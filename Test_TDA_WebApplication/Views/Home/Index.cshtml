@model IEnumerable<TDA_WebApplication.Models.Beers>
@{
    ViewData["Title"] = "Home Page";

}
<div class="text-center">
    <h1 class="display-4">Welcome to Team-Care Deprescring Application (TDA)!</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <br />
    <br />
    @if (Model != null) {
    <table class="table">
        <tdead>
            <tr>
                <th>Drug ID</th>
                <th>Drug Class</th>
                <th>Crcl</th>
                <th>Recommendation</th>
            </tr>
        </tdead>
        <tbody>
            @foreach (Beers item in Model)
            {
                <tr>
                    <td>@item.DrugID</td>
                    <td>@item.DrugClass</td>
                    <td>@item.Crcl</td>
                    <td>@item.Recommendation</td>
                </tr>
            }
        </tbody>
    </table>
    }
    else
    {
    <p>No data available.</p>
    }
</div>